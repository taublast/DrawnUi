<?xml version="1.0" encoding="utf-8" ?>

<views:BasePageCodeBehind
    x:Class="Sandbox.Views.MainPageButtons"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Sandbox.Views.Controls"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw"
    xmlns:views="clr-namespace:Sandbox.Views"
    x:Name="ThisPage"
    Title="SkiaButton Demo">

    <draw:Canvas
        BackgroundColor="#f5f5f5"
        Gestures="Enabled"
        HorizontalOptions="Fill"
        RenderingMode="Accelerated"
        VerticalOptions="Fill">

        <draw:SkiaLayout HorizontalOptions="Fill" VerticalOptions="Fill">

            <draw:SkiaScroll HorizontalOptions="Fill" VerticalOptions="Fill">

                <draw:SkiaLayout
                    Padding="20"
                    HorizontalOptions="Fill"
                    Spacing="24"
                    Type="Column"
                    UseCache="Operations">

                    <!--  TITLE  -->
                    <draw:SkiaLabel
                        FontAttributes="Bold"
                        FontSize="32"
                        HorizontalOptions="Center"
                        Text="SkiaButton"
                        TextColor="#2c3e50" />

                    <draw:SkiaLayout
                        HorizontalOptions="Fill"
                        Tag="Cached"
                        Type="Wrap"
                        UseCache="ImageComposite">

                        <!--  SECTION: CONTROL STYLES  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Control Styles"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Platform Styles"
                                TextColor="#34495e" />

                            <draw:SkiaLabel
                                FontSize="14"
                                Text="Buttons styled with ControlStyle property"
                                TextColor="#7f8c8d" />

                            <!--  Default Style  -->
                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaLabel
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="Default (Platform Auto)"
                                        TextColor="#2c3e50" />

                                    <draw:SkiaButton
                                        HorizontalOptions="Start"
                                        Tapped="OnButtonClicked"
                                        Text="Default Button" />

                                    <draw:SkiaLabel FontSize="12">
                                        <draw:TextSpan Text="• ControlStyle is Default" />
                                    </draw:SkiaLabel>

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                            <!--  Material Style  -->
                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaLabel
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="Material Design (Android)"
                                        TextColor="#2c3e50" />

                                    <draw:SkiaButton
                                        ControlStyle="Material"
                                        HorizontalOptions="Start"
                                        Tapped="OnButtonClicked"
                                        Text="Material Button" />

                                    <draw:SkiaLabel FontSize="12">
                                        <draw:TextSpan Text="• Uppercase text" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Corner radius: 4" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Pronounced shadows" />
                                    </draw:SkiaLabel>

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                            <!--  Cupertino Style  -->
                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaLabel
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="Cupertino (iOS)"
                                        TextColor="#2c3e50" />

                                    <draw:SkiaButton
                                        ControlStyle="Cupertino"
                                        HorizontalOptions="Start"
                                        Tapped="OnButtonClicked"
                                        Text="Cupertino Button" />

                                    <draw:SkiaLabel FontSize="12" TextColor="#95a5a6">
                                        <draw:TextSpan Text="• Semibold font" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Corner radius: 8" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Subtle shadows" />
                                    </draw:SkiaLabel>

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                            <!--  Windows Style  -->
                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaLabel
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        Text="Windows (WinUI)"
                                        TextColor="#2c3e50" />

                                    <draw:SkiaButton
                                        ControlStyle="Windows"
                                        Tapped="OnButtonClicked"
                                        Text="Windows Button" />

                                    <draw:SkiaLabel FontSize="12" TextColor="#95a5a6">
                                        <draw:TextSpan Text="• Medium font weight" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Corner radius: 4" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Minimal shadows" />
                                    </draw:SkiaLabel>

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  SECTION: Button Style Variants  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Button Variants"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Button Style Variants"
                                TextColor="#34495e" />

                            <draw:SkiaLabel
                                FontSize="14"
                                Text="Property ButtonStyle presentations: Contained, Outlined, Text"
                                TextColor="#7f8c8d" />

                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaButton
                                        BackgroundColor="#27ae60"
                                        ButtonStyle="Contained"
                                        Tapped="OnButtonClicked"
                                        Text="Contained Button"
                                        WidthRequest="200" />

                                    <draw:SkiaButton
                                        BackgroundColor="#3498db"
                                        ButtonStyle="Outlined"
                                        Tapped="OnButtonClicked"
                                        Text="Outlined Button"
                                        TextColor="#3498db"
                                        WidthRequest="200" />

                                    <draw:SkiaButton
                                        ButtonStyle="Text"
                                        Tapped="OnButtonClicked"
                                        Text="Text Button"
                                        TextColor="#3498db"
                                        WidthRequest="200" />

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  SECTION: TOUCH EFFECTS  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Touch Effects"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Touch Effects"
                                TextColor="#34495e" />

                            <draw:SkiaLabel
                                FontSize="14"
                                Text="Tap buttons to see animated effects"
                                TextColor="#7f8c8d" />

                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaButton
                                        ApplyEffect="Ripple"
                                        BackgroundColor="#9b59b6"
                                        Tapped="OnButtonClicked"
                                        Text="Ripple Effect"
                                        TouchEffectColor="#ffffff"
                                        WidthRequest="200" />

                                    <draw:SkiaButton
                                        ApplyEffect="Shimmer"
                                        BackgroundColor="#e67e22"
                                        ShimmerEffectColor="#ffffff"
                                        ShimmerEffectSpeed="400"
                                        Tapped="OnButtonClicked"
                                        Text="Shimmer Effect"
                                        WidthRequest="200" />

                                    <draw:SkiaButton
                                        ApplyEffect="None"
                                        BackgroundColor="#95a5a6"
                                        Tapped="OnButtonClicked"
                                        Text="No Effect"
                                        WidthRequest="200" />

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  SECTION: ELEVATION  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Elevation"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Elevation (Shadows)"
                                TextColor="#34495e" />

                            <draw:SkiaLabel
                                FontSize="14"
                                Text="Buttons with shadow effects for depth"
                                TextColor="#7f8c8d" />

                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="16" Type="Column">

                                    <draw:SkiaButton
                                        BackgroundColor="#1abc9c"
                                        ElevationEnabled="True"
                                        Tapped="OnButtonClicked"
                                        Text="With Elevation"
                                        WidthRequest="200" />

                                    <draw:SkiaButton
                                        BackgroundColor="#16a085"
                                        ElevationEnabled="False"
                                        Tapped="OnButtonClicked"
                                        Text="Without Elevation"
                                        WidthRequest="200" />

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  SECTION: CUSTOM BUTTON  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Custom Button"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Custom Button"
                                TextColor="#34495e" />

                            <draw:SkiaLabel
                                FontSize="14"
                                Text="Fully custom button with gradient, icon, and effects"
                                TextColor="#7f8c8d" />

                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <!--  Custom Gradient Button  -->
                                    <draw:SkiaButton
                                        x:Name="CustomButton"
                                        ApplyEffect="Ripple"
                                        HeightRequest="56"
                                        HorizontalOptions="Center"
                                        Tapped="OnButtonClicked"
                                        Text="Custom Gradient"
                                        TouchEffectColor="#ffffff"
                                        UseCache="OperationsFull"
                                        WidthRequest="250">

                                        <draw:SkiaShape
                                            CornerRadius="28"
                                            HorizontalOptions="Fill"
                                            Tag="BtnShape"
                                            Type="Rectangle"
                                            VerticalOptions="Fill">

                                            <draw:SkiaControl.FillGradient>
                                                <draw:SkiaGradient Angle="45" Type="Linear">
                                                    <draw:SkiaGradient.Colors>
                                                        <Color>#667eea</Color>
                                                        <Color>#764ba2</Color>
                                                    </draw:SkiaGradient.Colors>
                                                </draw:SkiaGradient>
                                            </draw:SkiaControl.FillGradient>

                                            <draw:SkiaShape.VisualEffects>
                                                <draw:DropShadowEffect
                                                    Blur="8"
                                                    X="0"
                                                    Y="4"
                                                    Color="#667eea" />
                                            </draw:SkiaShape.VisualEffects>

                                        </draw:SkiaShape>

                                        <draw:SkiaLayout
                                            HorizontalOptions="Center"
                                            Tag="BtnWrapper"
                                            UseCache="Image"
                                            VerticalOptions="Center">

                                            <draw:SkiaSvg
                                                HeightRequest="24"
                                                LockRatio="1"
                                                Source="Svg/dotnet_bot.svg"
                                                VerticalOptions="Center"
                                                WidthRequest="24" />

                                            <draw:SkiaRichLabel
                                                Margin="34,0,0,0"
                                                FontAttributes="Bold"
                                                FontSize="18"
                                                Tag="BtnText"
                                                TextColor="White"
                                                VerticalOptions="Center" />

                                        </draw:SkiaLayout>

                                    </draw:SkiaButton>

                                    <draw:SkiaLabel FontSize="12" TextColor="#95a5a6">
                                        <draw:TextSpan Text="• Custom gradient background" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• SVG icon integration" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Drop shadow effect" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Fully customizable content" />
                                    </draw:SkiaLabel>

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  SECTION: SIZES AND STATES  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Sizes"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Sizes and States"
                                TextColor="#34495e" />

                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaLabel
                                        Margin="0,0,0,8"
                                        FontSize="14"
                                        Text="Different sizes"
                                        TextColor="#7f8c8d" />

                                    <draw:SkiaButton
                                        Padding="12,6"
                                        BackgroundColor="#3498db"
                                        FontSize="12"
                                        Tapped="OnButtonClicked"
                                        Text="Small"
                                        WidthRequest="100" />

                                    <draw:SkiaButton
                                        Padding="16,10"
                                        BackgroundColor="#3498db"
                                        FontSize="14"
                                        Tapped="OnButtonClicked"
                                        Text="Medium"
                                        WidthRequest="140" />

                                    <draw:SkiaButton
                                        Padding="24,14"
                                        BackgroundColor="Orange"
                                        FontSize="18"
                                        Tapped="OnButtonClicked"
                                        Text="Large"
                                        WidthRequest="180" />

                                    <draw:SkiaLabel
                                        Margin="0,16,0,8"
                                        FontSize="14"
                                        Text="Disabled state"
                                        TextColor="#7f8c8d" />

                                    <draw:SkiaButton
                                        BackgroundColor="#bdc3c7"
                                        IsDisabled="True"
                                        Tapped="OnButtonClicked"
                                        Text="Disabled Button"
                                        WidthRequest="180" />

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  SECTION: PADDING  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Padding"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Padding Property"
                                TextColor="#34495e" />

                            <draw:SkiaLabel
                                FontSize="14"
                                Text="Padding is applied to button child with BtnWrapper Tag"
                                TextColor="#7f8c8d" />

                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaButton
                                        Padding="0"
                                        BackgroundColor="#9b59b6"
                                        MinimumWidthRequest="200"
                                        Tapped="OnButtonClicked"
                                        Text="No Padding" />

                                    <draw:SkiaButton
                                        Padding="16"
                                        BackgroundColor="#9b59b6"
                                        MinimumWidthRequest="200"
                                        Tapped="OnButtonClicked"
                                        Text="Padding=16" />

                                    <draw:SkiaButton
                                        Padding="20"
                                        BackgroundColor="#9b59b6"
                                        MinimumWidthRequest="200"
                                        Tapped="OnButtonClicked"
                                        Text="Padding=20" />

                                    <draw:SkiaButton
                                        Padding="24"
                                        BackgroundColor="#9b59b6"
                                        MinimumWidthRequest="200"
                                        Tapped="OnButtonClicked"
                                        Text="Padding=24" />

                                    <draw:SkiaLabel FontSize="12" TextColor="#95a5a6">
                                        <draw:TextSpan Text="• Single value: uniform padding" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Two values: horizontal,vertical" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Four values: left,top,right,bottom" />
                                    </draw:SkiaLabel>

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  SECTION: HOVER EFFECTS  -->
                        <draw:SkiaLayout
                            MinimumWidthRequest="200"
                            Spacing="12"
                            Tag="Hover"
                            Type="Column"
                            UseCache="Operations">

                            <draw:SkiaLabel
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="Hover Effects"
                                TextColor="#34495e"
                                UseCache="Operations" />

                            <draw:SkiaLabel
                                FontSize="14"
                                Text="Mouse hover state with DataTriggers"
                                TextColor="#7f8c8d"
                                UseCache="Operations" />

                            <draw:SkiaShape
                                Padding="16"
                                BackgroundColor="White"
                                CornerRadius="12"
                                Type="Rectangle"
                                UseCache="Operations">

                                <draw:SkiaLayout Spacing="8" Type="Column">

                                    <draw:SkiaButton
                                        BackgroundColor="#3498db"
                                        Tapped="OnButtonClicked"
                                        Text="Hover to Change Color"
                                        UseCache="Image"
                                        WidthRequest="200">
                                        <draw:SkiaControl.Triggers>
                                            <DataTrigger
                                                x:DataType="draw:SkiaButton"
                                                Binding="{Binding Source={RelativeSource Self}, Path=IsHovered}"
                                                TargetType="draw:SkiaButton"
                                                Value="True">
                                                <Setter Property="BackgroundColor" Value="#2980b9" />
                                            </DataTrigger>
                                        </draw:SkiaControl.Triggers>
                                    </draw:SkiaButton>

                                    <draw:SkiaButton
                                        BackgroundColor="#e74c3c"
                                        Tapped="OnButtonClicked"
                                        Text="Hover to Scale"
                                        UseCache="Image"
                                        WidthRequest="200">
                                        <draw:SkiaControl.Triggers>
                                            <DataTrigger
                                                x:DataType="draw:SkiaButton"
                                                Binding="{Binding Source={RelativeSource Self}, Path=IsHovered}"
                                                TargetType="draw:SkiaButton"
                                                Value="True">
                                                <Setter Property="ScaleX" Value="1.025" />
                                                <Setter Property="ScaleY" Value="1.025" />
                                            </DataTrigger>
                                            <DataTrigger
                                                x:DataType="draw:SkiaButton"
                                                Binding="{Binding Source={RelativeSource Self}, Path=IsHovered}"
                                                TargetType="draw:SkiaButton"
                                                Value="False">
                                                <Setter Property="ScaleX" Value="1.0" />
                                                <Setter Property="ScaleY" Value="1.0" />
                                            </DataTrigger>
                                        </draw:SkiaControl.Triggers>
                                    </draw:SkiaButton>

                                    <draw:SkiaButton
                                        BackgroundColor="#f39c12"
                                        Tapped="OnButtonClicked"
                                        Text="Hover to Glow"
                                        UseCache="OperationsFull"
                                        WidthRequest="200">
                                        <draw:SkiaControl.Triggers>
                                            <DataTrigger
                                                x:DataType="draw:SkiaButton"
                                                Binding="{Binding Source={RelativeSource Self}, Path=IsHovered}"
                                                TargetType="draw:SkiaButton"
                                                Value="True">
                                                <Setter Property="VisualEffects">
                                                    <generic:List xmlns:generic="clr-namespace:System.Collections.Generic;assembly=System.Collections" x:TypeArguments="draw:SkiaEffect">
                                                        <draw:DropShadowEffect
                                                            Blur="20"
                                                            X="0"
                                                            Y="0"
                                                            Color="#f39c12" />
                                                    </generic:List>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger
                                                x:DataType="draw:SkiaButton"
                                                Binding="{Binding Source={RelativeSource Self}, Path=IsHovered}"
                                                TargetType="draw:SkiaButton"
                                                Value="False">
                                                <Setter Property="VisualEffects">
                                                    <generic:List xmlns:generic="clr-namespace:System.Collections.Generic;assembly=System.Collections" x:TypeArguments="draw:SkiaEffect">
                                                        <draw:DropShadowEffect
                                                            Blur="4"
                                                            X="0"
                                                            Y="2"
                                                            Color="#22222222" />
                                                    </generic:List>
                                                </Setter>
                                            </DataTrigger>
                                        </draw:SkiaControl.Triggers>
                                    </draw:SkiaButton>

                                    <draw:SkiaLabel FontSize="12" TextColor="#95a5a6">
                                        <draw:TextSpan Text="• IsHovered property with DataTriggers" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Change colors, scale, effects" />
                                        <draw:TextSpan Text="&#10;" />
                                        <draw:TextSpan Text="• Works on desktop platforms" />
                                    </draw:SkiaLabel>

                                </draw:SkiaLayout>

                            </draw:SkiaShape>

                        </draw:SkiaLayout>

                        <!--  TAP COUNTER  -->
                        <draw:SkiaShape
                            Margin="0,20,0,0"
                            Padding="20"
                            BackgroundColor="#ecf0f1"
                            CornerRadius="12"
                            HeightRequest="100"
                            Tag="Counter"
                            Type="Rectangle"
                            UseCache="Operations"
                            WidthRequest="200">

                            <draw:SkiaLayout
                                HorizontalOptions="Center"
                                Spacing="8"
                                Type="Column">

                                <draw:SkiaLabel
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HorizontalOptions="Center"
                                    Text="Button Interactions"
                                    TextColor="#34495e" />

                                <draw:SkiaLabel
                                    x:Name="TapCountLabel"
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    Text="Tap any button to increment counter"
                                    TextColor="#7f8c8d" />

                            </draw:SkiaLayout>

                        </draw:SkiaShape>

                    </draw:SkiaLayout>

                </draw:SkiaLayout>

            </draw:SkiaScroll>

            <controls:ButtonToRoot />

            <draw:SkiaLabelFps
                Margin="0,0,4,24"
                BackgroundColor="DarkRed"
                ForceRefresh="False"
                HorizontalOptions="End"
                Rotation="-45"
                TextColor="White"
                VerticalOptions="End"
                ZIndex="100" />

        </draw:SkiaLayout>

    </draw:Canvas>

</views:BasePageCodeBehind>