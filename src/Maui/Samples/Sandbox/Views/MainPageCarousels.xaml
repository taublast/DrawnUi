<?xml version="1.0" encoding="utf-8" ?>
<views:BasePageCodeBehind
    x:Class="Sandbox.Views.MainPageCarousels"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Sandbox.Views.Controls"
    xmlns:demo="clr-namespace:Sandbox"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw"
    xmlns:gestures="clr-namespace:AppoMobi.Maui.Gestures;assembly=AppoMobi.Maui.Gestures"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:views="clr-namespace:Sandbox.Views"
    x:Name="ThisPage"
    ios:Page.UseSafeArea="True"
    x:DataType="demo:MainPageViewModel">

    <draw:Canvas
        Gestures="Enabled"
        RenderingMode="Accelerated"
        Tag="MainPage"
        BackgroundColor="#1a1a2e">

        <draw:SkiaLayout HorizontalOptions="Fill" VerticalOptions="Fill">

            <draw:SkiaScroll
                HorizontalOptions="Fill"
                VerticalOptions="Fill">

                <draw:SkiaLayout
                    Type="Column"
                    Spacing="20"
                    Padding="20"
                    HorizontalOptions="Fill">

                    <!--  TITLE  -->
                    <draw:SkiaLabel
                        FontSize="28"
                        FontAttributes="Bold"
                        Text="SkiaCarousel Demo"
                        TextColor="White"
                        HorizontalOptions="Center" />

                    <!--  CONTROLS  -->
                    <draw:SkiaLayout
                        Type="Column"
                        Spacing="10"
                        HorizontalOptions="Center"
                        Margin="0,10,0,0">

                        <draw:SkiaLayout
                            Type="Row"
                            Spacing="10"
                            HorizontalOptions="Center">

                            <draw:SkiaButton
                                BackgroundColor="#e94560"
                                Padding="0,4"
                                Text="{Binding IsLooped, StringFormat='Loop: {0}'}"
                                TextColor="White"
                                CommandTapped="{Binding CommandToggleLoop}" />

                            <draw:SkiaButton
                                BackgroundColor="#a8df8e"
                                Padding="20,12"
                                Text="{Binding Bounces, StringFormat='Bounces: {0}'}"
                                TextColor="#1a1a2e"
                                CommandTapped="{Binding CommandToggleBounces}" />

                        </draw:SkiaLayout>

                        <draw:SkiaLayout
                            Type="Row"
                            Spacing="10"
                            HorizontalOptions="Center">

                            <draw:SkiaButton
                                BackgroundColor="#0f3460"
                                Padding="20,12"
                                Text="← Prev"
                                TextColor="White"
                                CommandTapped="{Binding CommandGoPrev}" />

                            <draw:SkiaButton
                                BackgroundColor="#0f3460"
                                Padding="20,12"
                                Text="Next →"
                                TextColor="White"
                                CommandTapped="{Binding CommandGoNext}" />

                        </draw:SkiaLayout>

                    </draw:SkiaLayout>

                    <!--  CAROUSEL  -->
                    <draw:SkiaCarousel
                        x:Name="MainCarousel"
                        BackgroundColor="#16213e"
                        Bounces="{Binding Bounces}"
                        HeightRequest="250"
                        HorizontalOptions="Fill"
                        IsLooped="{Binding IsLooped}"
                        SelectedIndex="{Binding SelectedIndex}"
                        SidesOffset="40"
                        Spacing="20"
                        SwipeSpeed="{Binding SwipeSpeed}"
                        Tag="Carousel">

                        <draw:SkiaLayout BackgroundColor="#e94560">
                            <draw:SkiaLabel
                                FontSize="60"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="1"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </draw:SkiaLayout>

                        <draw:SkiaLayout BackgroundColor="#0f3460">
                            <draw:SkiaLabel
                                FontSize="60"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="2"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </draw:SkiaLayout>

                        <draw:SkiaLayout BackgroundColor="#533483">
                            <draw:SkiaLabel
                                FontSize="60"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="3"
                                TextColor="White"
                                VerticalOptions="Center" />
                        </draw:SkiaLayout>

                        <draw:SkiaLayout BackgroundColor="#a8df8e">
                            <draw:SkiaLabel
                                FontSize="60"
                                FontAttributes="Bold"
                                HorizontalOptions="Center"
                                Text="4"
                                TextColor="#1a1a2e"
                                VerticalOptions="Center" />
                        </draw:SkiaLayout>

                    </draw:SkiaCarousel>

                    <!--  INDICATORS  -->
                    <draw:SkiaLayout
                        Type="Row"
                        Spacing="8"
                        HorizontalOptions="Center">

                        <draw:SkiaShape
                            UseCache="Operations"
                            BackgroundColor="#e94560"
                            HeightRequest="8"
                            Type="Circle"
                            WidthRequest="8">
                            <draw:SkiaControl.Triggers>
                                <DataTrigger
                                    Binding="{Binding Source={x:Reference MainCarousel}, Path=SelectedIndex}"
                                    TargetType="draw:SkiaShape"
                                    Value="0">
                                    <Setter Property="WidthRequest" Value="24" />
                                </DataTrigger>
                            </draw:SkiaControl.Triggers>
                        </draw:SkiaShape>

                        <draw:SkiaShape
                            UseCache="Operations"
                            BackgroundColor="#0f3460"
                            HeightRequest="8"
                            Type="Circle"
                            WidthRequest="8">
                            <draw:SkiaControl.Triggers>
                                <DataTrigger
                                    Binding="{Binding Source={x:Reference MainCarousel}, Path=SelectedIndex}"
                                    TargetType="draw:SkiaShape"
                                    Value="1">
                                    <Setter Property="WidthRequest" Value="24" />
                                </DataTrigger>
                            </draw:SkiaControl.Triggers>
                        </draw:SkiaShape>

                        <draw:SkiaShape
                            UseCache="Operations"
                            BackgroundColor="#533483"
                            HeightRequest="8"
                            Type="Circle"
                            WidthRequest="8">
                            <draw:SkiaControl.Triggers>
                                <DataTrigger
                                    Binding="{Binding Source={x:Reference MainCarousel}, Path=SelectedIndex}"
                                    TargetType="draw:SkiaShape"
                                    Value="2">
                                    <Setter Property="WidthRequest" Value="24" />
                                </DataTrigger>
                            </draw:SkiaControl.Triggers>
                        </draw:SkiaShape>

                        <draw:SkiaShape
                            UseCache="Operations"
                            BackgroundColor="#a8df8e"
                            HeightRequest="8"
                            Type="Circle"
                            WidthRequest="8">
                            <draw:SkiaControl.Triggers>
                                <DataTrigger
                                    Binding="{Binding Source={x:Reference MainCarousel}, Path=SelectedIndex}"
                                    TargetType="draw:SkiaShape"
                                    Value="3">
                                    <Setter Property="WidthRequest" Value="24" />
                                </DataTrigger>
                            </draw:SkiaControl.Triggers>
                        </draw:SkiaShape>

                    </draw:SkiaLayout>


                    <!--  STATUS INFO  -->
                    <draw:SkiaLayout
                        Type="Column"
                        Spacing="8"
                        HorizontalOptions="Center"
                        Margin="0,10,0,0">

                        <draw:SkiaLabel
                            FontSize="14"
                            Text="{Binding Source={x:Reference MainCarousel}, Path=SelectedIndex, StringFormat='Selected Index: {0}'}"
                            TextColor="White"
                            HorizontalOptions="Center" />

                        <draw:SkiaLabel
                            FontSize="14"
                            Text="{Binding Source={x:Reference MainCarousel}, Path=InTransition, StringFormat='InTransition: {0}'}"
                            TextColor="#aaa"
                            HorizontalOptions="Center" />

                        <draw:SkiaLabel
                            FontSize="14"
                            TextColor="#aaa"
                            HorizontalOptions="Center">
                            <draw:SkiaLabel.Text>
                                <Binding Path="IsLooped">
                                    <Binding.Converter>
                                        <views:BoolToLoopStatusConverter />
                                    </Binding.Converter>
                                </Binding>
                            </draw:SkiaLabel.Text>
                        </draw:SkiaLabel>

                    </draw:SkiaLayout>

                    <!--  SWIPE SPEED CONTROL  -->
                    <draw:SkiaShape
                        Type="Rectangle"
                        CornerRadius="12"
                        BackgroundColor="#16213e"
                        Padding="16"
                        Margin="0,20,0,0"
                        HorizontalOptions="Fill">

                        <draw:SkiaLayout
                            Type="Column"
                            Spacing="12">

                            <draw:SkiaLabel
                                FontSize="16"
                                FontAttributes="Bold"
                                Text="Swipe Speed"
                                TextColor="White" />

                            <draw:SkiaLayout
                                Type="Row"
                                Spacing="10"
                                HorizontalOptions="Center">

                                <draw:SkiaButton
                                    BackgroundColor="#533483"
                                    Padding="15,10"
                                    Text="0.5x"
                                    TextColor="White"
                                    CommandTapped="{Binding CommandSetSpeed05}" />

                                <draw:SkiaButton
                                    BackgroundColor="#533483"
                                    Padding="15,10"
                                    Text="1.0x"
                                    TextColor="White"
                                    CommandTapped="{Binding CommandSetSpeed10}" />

                                <draw:SkiaButton
                                    BackgroundColor="#533483"
                                    Padding="15,10"
                                    Text="2.0x"
                                    TextColor="White"
                                    CommandTapped="{Binding CommandSetSpeed20}" />

                            </draw:SkiaLayout>

                            <draw:SkiaLabel
                                FontSize="12"
                                Text="{Binding SwipeSpeed, StringFormat='Current: {0:F1}x'}"
                                TextColor="#aaa"
                                HorizontalOptions="Center" />

                        </draw:SkiaLayout>

                    </draw:SkiaShape>

                    <!--  INFO BOX  -->
                    <draw:SkiaShape
                        Type="Rectangle"
                        CornerRadius="12"
                        BackgroundColor="#0f3460"
                        Padding="16"
                        Margin="0,20,0,20"
                        HorizontalOptions="Fill">

                        <draw:SkiaLayout
                            Type="Column"
                            Spacing="8">

                            <draw:SkiaLabel
                                FontSize="14"
                                FontAttributes="Bold"
                                Text="Features:"
                                TextColor="White" />

                            <draw:SkiaLabel
                                FontSize="12"
                                Text="• IsLooped - Infinite scrolling when enabled"
                                TextColor="#aaa" />

                            <draw:SkiaLabel
                                FontSize="12"
                                Text="• SidesOffset - Peek effect showing adjacent slides"
                                TextColor="#aaa" />

                            <draw:SkiaLabel
                                FontSize="12"
                                Text="• SwipeSpeed - Animation velocity multiplier"
                                TextColor="#aaa" />

                            <draw:SkiaLabel
                                FontSize="12"
                                Text="• Bounces - Spring-based elastic animation"
                                TextColor="#aaa" />

                            <draw:SkiaLabel
                                FontSize="12"
                                Text="• Indicators - Visual dots tracking selected slide"
                                TextColor="#aaa" />

                        </draw:SkiaLayout>

                    </draw:SkiaShape>

                </draw:SkiaLayout>

            </draw:SkiaScroll>

            <controls:ButtonToRoot />

            <draw:SkiaLabelFps
                Margin="0,0,4,24"
                BackgroundColor="DarkRed"
                ForceRefresh="False"
                HorizontalOptions="End"
                Rotation="-45"
                TextColor="White"
                VerticalOptions="End"
                ZIndex="100" />

        </draw:SkiaLayout>

    </draw:Canvas>

</views:BasePageCodeBehind>
