<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="MauiApp8.ReproEditors"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:draw="http://schemas.appomobi.com/drawnUi/2023/draw">
    <VerticalStackLayout Padding="30,0" Spacing="10">
        <Label Text="MAUI Controls" />
        <Entry />
        <Editor />
        <Label Margin="0,50,0,0" Text="DrawnUi SkiaMauiEntry Controls" />
        <draw:Canvas HorizontalOptions="Fill">
            <draw:GridLayout
                HeightRequest="200"
                HorizontalOptions="Fill"
                RowDefinitions="32,*"
                RowSpacing="10">

                <draw:SkiaMauiEntry
                    BackgroundColor="Transparent"
                    HorizontalOptions="Fill"
                    PlaceholderText="Enter text.."
                    TextColor="Black"
                    VerticalOptions="Fill" />

                <draw:SkiaMauiEditor
                    Grid.Row="1"
                    BackgroundColor="Bisque"
                    HorizontalOptions="Fill"
                    PlaceholderText="Enter text.."
                    VerticalOptions="Fill" />

            </draw:GridLayout>
        </draw:Canvas>
    </VerticalStackLayout>
</ContentPage>